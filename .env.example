# Backend (backend/.env or root .env when running from root)
DATABASE_URL=postgresql://pairly:pairly@localhost:5432/pairly
REDIS_URL=redis://localhost:6379
# В проде обязательно: длинный случайный JWT_SECRET (например openssl rand -base64 32)
JWT_SECRET=change-me-to-a-long-random-string-in-production
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_ACCESS_TOKEN=your_tmdb_v4_read_access_token_optional
PORT=4000
# В проде: только нужные домены через запятую, без *
WEB_ORIGIN=http://localhost:3000

# Web (web/.env.local) — optional, defaults used if unset
# NEXT_PUBLIC_API_URL=http://localhost:4000
